{
  "name": "sharp-pointer",
  "version": "0.0.1",
  "author": "Dan Forster <dan.forster@gmail.com>",
  "description": "A complete implementation of JSON Pointer (RFC 6901) for nodejs and modern browsers.",
  "keywords": [
    "6901",
    "json",
    "pointers",
    "fragmentid"
  ],
  "files": [
    "dist.js"
  ],
  "main": "dist.js",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "release": "babel --presets es2015 --minified --no-comments index.js --out-file releases/json-ptr-$npm_package_version.min.js",
    "prepublish": "babel --presets es2015 index.js --out-file dist.js",
    "cover": "istanbul cover ./node_modules/mocha/bin/_mocha --report html -- -R spec",
    "pretest": "eslint .",
    "test": "mocha -R spec"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.6.0",
    "blanket": "^1.2.1",
    "eslint": "^1.10.3",
    "expect.js": "~0.3.1",
    "mocha": "~2.3.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danfo/sharp-pointer"
  },
  "engines": {
    "node": ">=4.0"
  }
}
